@{
}
@model TicketsApplication.Domain.Identity.TicketsApplicationUser
@{ ViewData["Title"] = "ChangeRoleOfUser"; }

<h1>Change User Role</h1>

<form asp-action="ChangeRoleOfUser" asp-controller="Account" method="post">
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.UserName)
    <select asp-for="Role" asp-items="Html.GetEnumSelectList<TicketsApplication.Domain.DomainModels.EnumRoles>()">
        <option value="">Choose a role</option>
    </select>
    <button type="submit" class="btn btn-success">Save Role</button>
</form>
